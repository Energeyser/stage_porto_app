<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_doctor_initials"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/oval"
                android:gravity="center"
                android:text="CM"
                android:textAppearance="@style/DoctorInitial" />

            <EditText
                android:id="@+id/name_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2.5dp"
                android:layout_gravity="center"
                android:text="Carla MARTINS"
                android:textAppearance="@style/DoctorName" />

            <TextView
                android:id="@+id/phone_number_doctor"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:paddingLeft="35dp"
                android:text="Phone number:"
                android:textAppearance="@style/DoctorInformations" />

            <EditText
                android:id="@+id/phone_doctor"
                android:inputType="phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textAppearance="@style/DoctorInformations" />

            <TextView
                android:id="@+id/mail_address_doctor"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:paddingLeft="35dp"
                android:text="Email address:"
                android:textAppearance="@style/DoctorInformations" />

            <EditText
                android:id="@+id/mail_doctor"
                android:inputType="textEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textAppearance="@style/DoctorInformations" />

            <TextView
                android:id="@+id/txt_username_doctor"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:paddingLeft="35dp"
                android:text="Username:"
                android:textAppearance="@style/DoctorInformations" />

            <EditText
                android:id="@+id/username_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textAppearance="@style/DoctorInformations" />

            <TextView
                android:id="@+id/txt_password_doctor"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:paddingLeft="35dp"
                android:text="Password:"
                android:textAppearance="@style/DoctorInformations" />

            <EditText
                android:id="@+id/password_doctor"
                android:inputType="textVisiblePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textAppearance="@style/DoctorInformations" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/button_validate_info_patient"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Validate the changes"
        android:textAllCaps="true"
        android:onClick="onClickChanges"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_weight="0.42"
        android:background="#212121">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="openMonthSummary"
            android:layout_marginRight="1dp"
            android:background="#E0E0E0">
            <ImageView
                android:id="@+id/img_month_summary"
                android:layout_marginTop="7dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_summary"/>
            <TextView
                android:id="@+id/txt_month_summary"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginBottom="2.5dp"
                android:layout_gravity="center"
                android:text="Summary"
                android:textAppearance="@style/TextMenu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="openCalendar"
            android:layout_marginRight="1dp"
            android:background="#E0E0E0">
            <ImageView
                android:id="@+id/img_calendar_month_summary"
                android:layout_marginTop="7dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_calendar"/>
            <TextView
                android:id="@+id/txt_calendar_month_summary"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginBottom="2.5dp"
                android:layout_gravity="center"
                android:text="Calendar"
                android:textAppearance="@style/TextMenu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="openExport"
            android:layout_marginRight="1dp"
            android:background="#E0E0E0">
            <ImageView
                android:id="@+id/img_export_month_summary"
                android:layout_marginTop="7dp"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_export"/>
            <TextView
                android:id="@+id/txt_export_month_summary"
                android:layout_width="35dp"
                android:layout_height="10dp"
                android:layout_marginBottom="2.5dp"
                android:layout_gravity="center"
                android:text="Export"
                android:textAppearance="@style/TextMenu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#E0E0E0">
            <ImageView
                android:id="@+id/img_doctor_month_summary"
                android:layout_marginTop="7dp"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_doctor"/>
            <TextView
                android:id="@+id/txt_doctor_month_summary"
                android:layout_width="35dp"
                android:layout_height="10dp"
                android:layout_marginBottom="2.5dp"
                android:layout_gravity="center"
                android:text="Doctor"
                android:textAppearance="@style/TextMenu"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

