<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_doctor_login"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:src="@drawable/icon_doctor"/>

            <TextView
                android:id="@+id/title_identification"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Please identify yourself"
                android:textAppearance="@style/DoctorName" />

            <TextView
                android:id="@+id/username_doctor_login"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:paddingLeft="35dp"
                android:text="Your username:"
                android:textAppearance="@style/DoctorInformations" />

            <EditText
                android:id="@+id/login_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textAppearance="@style/DoctorInformations" />
            <TextView
                android:id="@+id/pwd_doctor"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:paddingLeft="35dp"
                android:text="Your password:"
                android:textAppearance="@style/DoctorInformations" />
            <EditText
                android:id="@+id/password_doctor"
                android:inputType="textVisiblePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textAppearance="@style/DoctorInformations" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/button_validate_info_patient"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Validate"
        android:textAllCaps="true"
        android:onClick="onClickValidation"/>
</LinearLayout>

