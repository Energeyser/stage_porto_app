<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <TextView
        android:id="@+id/title_export_data"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Export the data"
        android:textAllCaps="true"
        android:gravity="center"
        android:textAppearance="@style/TitleExportData"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/period_data_export"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="35dp"
                android:layout_marginTop="25dp"
                android:textAppearance="@style/ExportData"
                android:text="Period for the exported data:"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/from_export"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginBottom="2.5dp"
                    android:text="From:"
                    android:textAppearance="@style/DateExportData"/>

             </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/to_export"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginBottom="2.5dp"
                    android:text="To:"
                    android:textAppearance="@style/DateExportData"/>
            </LinearLayout>
            <TextView
                android:id="@+id/destination_export_data"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="35dp"
                android:layout_marginTop="25dp"
                android:textAppearance="@style/ExportData"
                android:text="Destination:"/>
            <Spinner
                android:id="@+id/spinner_destination_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Export"
                android:textAllCaps="true"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_weight="0.42"
        android:background="#212121">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="openMonthSummary"
            android:layout_marginRight="1dp"
            android:background="#E0E0E0">
            <ImageView
                android:id="@+id/img_month_summary"
                android:layout_marginTop="7dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_summary"/>
            <TextView
                android:id="@+id/txt_month_summary"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginBottom="2.5dp"
                android:layout_gravity="center"
                android:text="Summary"
                android:textAppearance="@style/TextMenu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="openCalendar"
            android:layout_marginRight="1dp"
            android:background="#E0E0E0">
            <ImageView
                android:id="@+id/img_calendar_month_summary"
                android:layout_marginTop="7dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_calendar"/>
            <TextView
                android:id="@+id/txt_calendar_month_summary"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginBottom="2.5dp"
                android:layout_gravity="center"
                android:text="Calendar"
                android:textAppearance="@style/TextMenu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="openExport"
            android:layout_marginRight="1dp"
            android:background="#E0E0E0">
            <ImageView
                android:id="@+id/img_export_month_summary"
                android:layout_marginTop="7dp"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_export"/>
            <TextView
                android:id="@+id/txt_export_month_summary"
                android:layout_width="35dp"
                android:layout_height="10dp"
                android:layout_marginBottom="2.5dp"
                android:layout_gravity="center"
                android:text="Export"
                android:textAppearance="@style/TextMenu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:onClick="openDoctorInformation"
            android:background="#E0E0E0">
            <ImageView
                android:id="@+id/img_doctor_month_summary"
                android:layout_marginTop="7dp"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_doctor"/>
            <TextView
                android:id="@+id/txt_doctor_month_summary"
                android:layout_width="35dp"
                android:layout_height="10dp"
                android:layout_marginBottom="2.5dp"
                android:layout_gravity="center"
                android:text="Doctor"
                android:textAppearance="@style/TextMenu"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

