<resources>

<!-- STYLE FOR THE MONTH SUMMARY VIEW  -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="FrontNameInitial">
        <!-- Customize your theme here. -->
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#00897B</item>
    </style>

    <style name="PatientName">
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="DateMonth">
        <!-- Customize your theme here. -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="TitleMeasure">
        <!-- Customize your theme here. -->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">1.5dp</item>
    </style>

    <style name="MinMaxMeasure">
        <!-- Customize your theme here. -->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <style name="TextMenu">
        <!-- Customize your theme here. -->
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:textAllCaps">true</item>
    </style>

<!-- STYLE FOR THE DOCTOR INFORMATION VIEW  -->

    <style name="DoctorInitial">
